    <!-- row 1 -->
    <header class="row">
      <div class="col-md-6">
          <h1><%= link_to "Acme Real Estate", "index" %></h1>
        </div>
      <div class="col-md-6" style="margin-top: 20px;">
          <h4><%= link_to "For Sale", "sale" %>   For Rent   New Developments </h4>
        </div>
    </header>

    <!-- row 2 -->
<h1>Properties for Sale</h1>


  <%= form_tag "/properties/find" do %>
  <label>Max Price</label>
  <%= text_field_tag :search_max %></br>
  <label>Min Price</label>
  <%= text_field_tag :search_min %></br>

    <%= submit_tag "Search" %>
    <% end %>




<table class="table">
  <tr>
    <th>Address</th>
    <th>Price</th>
  </tr>
<% @properties.each do |property| %>
  <tr>
    <td><%= link_to (property.address), {:action => 'show', :id => property.id} %></td>
    <td><%= number_to_currency(property.price, precision: 0) %></td>
    <% end %>
  </tr>
</table>

